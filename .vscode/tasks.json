{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Main",
            "type": "shell",
            "command": "gcc -g sum.c main.c -o main.out",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Lecture5",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/lecture5"
            },
            "command": "gcc -g helloworld.c -o helloworld.out",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}